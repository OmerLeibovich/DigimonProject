generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model digimon {
  id         Int    @id @default(autoincrement())
  photo      String
  name       String
  rank       String
  level      String
  experience Int
  levelUPExp Int
  type       String
  hp         String
  attack     String
  defense    String
  userid     Int
  money      Int    @default(0)
  loses      Int    @default(0)
  wins       Int    @default(0)
  user       user   @relation(fields: [userid], references: [id])
}

model user {
  id         Int       @id @default(autoincrement())
  username   String    @unique
  password   String
  email      String    @unique
  isActivate Boolean   @default(false)
  token      String
  digimons   digimon[]
}

model shop{
  id     Int @id @default(autoincrement())
  name   String
  price  Int
  photo  String
  description String
}

model Session {
  id        String   @id @default(cuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
