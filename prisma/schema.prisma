generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// @unique @db.VarChar(255)

model digimon {
  id         Int    @id @default(autoincrement())
  userid     Int
  user       user     @relation(fields: [userid], references: [id])
  photo      String
  name       String                        
  rank       String
  level      String
  experience Int
  levelUPExp Int
  type       String
  hp         String
  attack     String
  defense    String
}
model user{
  id         Int    @id @default(autoincrement())
  username String @unique
  password String
  digimons digimon[]
}

model Session {
  id            String   @id @default(cuid())
  sid           String   @unique
  data          String
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}


