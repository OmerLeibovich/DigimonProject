generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model digimon {
  id         Int    @id @default(autoincrement())
  photo      String
  name       String
  rank       String
  level      Int
  experience Int
  levelUPExp Int
  type       String
  hp         String
  attack     String
  defense    String
  loses      Int    @default(0)
  userid     Int
  wins       Int    @default(0)
  user       user   @relation(fields: [userid], references: [id])
}

model user {
  id          Int         @id @default(autoincrement())
  username    String      @unique
  password    String
  email       String      @unique
  isActivate  Boolean     @default(false)
  token       String
  money       Int         @default(300)
  digimons    digimon[]
  inventories inventory[]
}

model item {
  id          Int         @id @default(autoincrement())
  name        String
  price       Int
  photo       String
  description String
  inventories inventory[]
}

model Session {
  id        String   @id @default(cuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model inventory {
  id       Int  @id @default(autoincrement())
  userId   Int
  itemId   Int
  quantity Int  @default(0)
  item     item @relation(fields: [itemId], references: [id])
  user     user @relation(fields: [userId], references: [id])

  @@unique([userId, itemId])
}
