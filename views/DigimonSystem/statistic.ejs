<div class="statistic-container">
    <div class="statistic-controls">
    <select id="digimon-statistic">
        <option value="">all</option>
        <% digimons.forEach(digimon => { %>
            <option data-id="<%= digimon.id %>" data-name="<%= digimon.name %>">
                  <%= digimon.name %>
                    &nbsp;
                    <%= digimon.level %>
            </option>
        <% }) %>
    </select>
    <button id="statistic-digimon" class="btn btn-choose">choose</button>
    </div>
    <canvas id="digiChart" class="canvas-chart">
    </canvas>
</div>
