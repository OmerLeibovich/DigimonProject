<div class="register-container">
  <h2>Register now for <span class="highlight">FREE</span></h2>

  <span id="errordb"></span>
  <form class="register-form">
    <label for="username">Username</label>
    <span id="erroruser"></span>
    <input type="text" id="Rusername" placeholder="">

    <label for="email">Email</label>
    <span id="erroremail"></span>
    <input type="email" id="email" placeholder="">

    <label for="password">Password </label>
    <span id="errorpass"></span>
    <input type="password" id="Rpassword" placeholder="Make it hard to guess!">

    <label for="confirm-password">Re-enter Password </label>
    <input type="password" id="confirm-password" placeholder="You have to remember that">

    <button type="submit" class="create-btn">Create Account</button>

    <a class="back-link">Back to Login</a>
  </form>
</div>
